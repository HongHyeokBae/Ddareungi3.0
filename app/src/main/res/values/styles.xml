<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
    </style>

    <style name="AppbarTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ProgressbarColor">
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="MarkerText">
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.MaterialComponents.FloatingActionButton.RefreshFab">
        <item name="elevation">6dp</item>
        <item name="android:src">@drawable/ic_refresh_black_16dp</item>
        <item name="backgroundTint">@color/colorPrimaryLight</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="MapCardTitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="MapCardRegularTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <style name="BikeRentButtonText">
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TimerStartButtonText">
        <item name="android:fontFamily">@font/spoqa_han_sans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DestCardNameStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="DestCardDistTextStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>


</resources>
