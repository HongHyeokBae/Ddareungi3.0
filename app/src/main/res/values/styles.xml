<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">#21AE78</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Widget.BottomNavigationView"
           parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/spoqahansansregular</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="TextAppearance"/>
    <style name="TextAppearance.BottomNavigationView"/>
    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">10sp</item>
    </style>


    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MapCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">bottom</item>
    </style>
    
    <style name="MapCardTitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqahansansbold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="MapCardRegularTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqahansansregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <style name="DestCardNameStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqahansansbold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="DestCardDistTextStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/spoqahansansregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="DestCardPathButtonStyle">
        <item name="android:layout_width">87dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:src">@drawable/ic_baseline_directions_40px</item>
        <item name="android:background">@drawable/dest_path_button_style</item>
    </style>

    <style name="AppbarTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqahansansbold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ProgressbarColor">
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

</resources>
