<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">#21AE78</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Widget.BottomNavigationView"
           parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/spoqahansansregular</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="TextAppearance"/>
    <style name="TextAppearance.BottomNavigationView"/>
    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">10sp</item>
    </style>


    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="MapCardTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqahansansbold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MapCardRegularStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqahansansregular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DestCardNameStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqahansansbold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DestCardDistStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/spoqahansansregular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppbarTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqahansansbold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="ProgressbarColor">
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

</resources>
