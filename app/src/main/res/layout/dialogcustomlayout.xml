<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp" xmlns:app="http://schemas.android.com/apk/res-auto"

              android:layout_height="200dp" android:background="#fff"
              android:orientation="vertical" android:gravity="center"
>

    <TextView android:layout_marginBottom="15dp" android:textSize="17sp" android:id="@+id/dialogTxt"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="15분 내에 따릉이를 반납해주세요"/>
    <Button android:layout_width="wrap_content" android:layout_height="36dp"
            android:background="@drawable/btnlayout" android:clickable="true"
            android:text="알람중단" android:id="@+id/dialogBtn"/>
</LinearLayout>
