<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              android:background="#fff"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".TimerFragment"
            android:orientation="vertical"
            android:id="@+id/timerView">

        <Spinner
                android:spinnerMode="dropdown"
                android:background="@drawable/timerspinnerlayout"

                android:textAlignment="center"
                android:entries="@array/spin_arr"
                android:layout_width="360dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_height="70dp"
                android:id="@+id/timerSpinner"
                android:layout_marginTop="30dp"
        />
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ProgressBar
                     android:indeterminate="true"
                    android:indeterminateDrawable="@drawable/prgbar"
                    android:visibility="invisible"
                    android:id="@+id/timerPrgbar"
                    android:layout_width="360dp" android:layout_height="360dp" android:layout_gravity="center"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/timerTxt" android:textSize="70sp" android:textColor="#222222"
                      android:layout_gravity="center" />
        </FrameLayout>

        <Button
                android:background="@drawable/btnlayout"
                android:layout_gravity="center_horizontal"
                android:layout_width="140dp"
                android:layout_height="65dp"
                android:id="@+id/timerBtn"
                android:text="대여 시작"
                android:textColor="#fff"
        />


</LinearLayout>