<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map_layout"
        tools:context=".MapFragment">

    <android.support.v7.widget.CardView
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:layout_height="48dp"
            android:background="@color/white"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp">
        <fragment
                android:id="@+id/autocomplete_fragment"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"/>
    </android.support.v7.widget.CardView>

    <com.google.android.gms.maps.MapView
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/mapView"
            map:uiCompass="false"
            map:cameraZoom="16"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/my_location_button"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            android:src="@drawable/ic_my_location_black_24dp"
            android:layout_gravity="end"
            app:elevation="6dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="64dp" app:rippleColor="#A0C3C5C5"/>

    <android.support.v7.widget.CardView
            android:id="@+id/map_card_view"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginStart="4dp" android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:cardElevation="1dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            app:cardCornerRadius="8dp">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:paddingStart="16dp" android:paddingBottom="16dp">
            <TextView
                    android:id="@+id/map_card_title_text"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:maxLines="1" android:ellipsize="end"
                    style="@style/MapCardTitleStyle" android:layout_marginTop="8dp"/>

            <TextView
                    android:id="@+id/map_card_regular_text"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/map_card_title_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:lineSpacingExtra="10dp"
                    style="@style/MapCardRegularStyle"/>

            <Button
                    android:id="@+id/path_button"
                    android:layout_width="wrap_content" android:layout_height="36dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/map_card_regular_text"
                    android:background="@drawable/bike_path_button"
                    android:backgroundTint="@color/colorPrimaryLight"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_baseline_directions_18px"
                    android:text="@string/card_path_button_text"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>

            <Button android:id="@+id/rent_button"
                    android:layout_width="wrap_content" android:layout_height="36dp"
                    app:layout_constraintStart_toEndOf="@+id/path_button"
                    app:layout_constraintTop_toBottomOf="@id/map_card_regular_text"
                    android:background="@drawable/rent_button_style"
                    android:layout_marginTop="4dp" android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/ic_ddareungi_logo"
                    android:text="@string/map_card_rent_button_text"
                    android:drawablePadding="8dp" android:gravity="center_vertical"/>

            <ImageButton
                    android:id="@+id/bookmark_button"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_star_border_black_24dp"
                    android:background="@drawable/bookmark_ripple_effect"
                    android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/white"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/dest_card_view"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginStart="4dp" android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="8dp"
            android:visibility="gone"
            android:layout_gravity="bottom">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">

            <TextView
                    android:id="@+id/dest_name_text"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:lineSpacingExtra="6dp"
                    android:maxLines="1" android:ellipsize="end"
                    style="@style/DestCardNameStyle"/>

            <TextView
                    android:id="@+id/dest_dist_text"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/dest_name_text"
                    style="@style/DestCardDistStyle" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="12dp"/>

            <ImageButton
                    android:id="@+id/dest_card_path_button"
                    android:layout_width="87dp" android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:backgroundTint="@color/colorPrimaryLight"
                    android:src="@drawable/ic_baseline_directions_40px"
                    android:background="@drawable/dest_path_button_style"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/map_refresh_fab"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp" android:layout_marginEnd="16dp"
            app:elevation="6dp"
            android:src="@drawable/ic_refresh_black_16dp"
            app:backgroundTint="@color/colorPrimaryLight" app:borderWidth="0dp"/>

    <io.github.yavski.fabspeeddial.FabSpeedDial
            android:id="@+id/map_place_fab"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="64dp"
            app:fabGravity="bottom_end"
            app:fabDrawable="@drawable/ic_place_black_24dp"
            app:fabMenu="@menu/place_fab_menu"
            android:background="@android:color/transparent"
            app:miniFabBackgroundTint="@color/white" app:miniFabDrawableTint="@color/black"
            app:fabBackgroundTint="@color/white" app:fabDrawableTint="@color/black"
            android:elevation="6dp"/>

</android.support.design.widget.CoordinatorLayout>