<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapFragment">

    <com.google.android.gms.maps.MapView
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/mapView"
            map:uiCompass="false"
            map:cameraZoom="16"/>

    <android.support.v7.widget.CardView
            android:id="@+id/map_card_view"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginStart="4dp" android:layout_marginEnd="4dp"
            android:layout_marginBottom="64dp"
            app:cardElevation="1dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            app:cardCornerRadius="8dp">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:paddingStart="16dp" android:paddingEnd="16dp"
                                                     android:paddingTop="8dp" android:paddingBottom="16dp">
            <TextView
                    android:text="정류소 이름"
                    android:id="@+id/map_card_title_text"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:maxLines="1" android:ellipsize="end"
                    style="@style/MapCardTitleStyle"/>

            <TextView
                    android:text="00대 이용 가능"
                    android:id="@+id/map_card_regular_text"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/map_card_title_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:lineSpacingExtra="10dp"
                    style="@style/MapCardRegularStyle"/>

            <Button
                    android:id="@+id/path_button"
                    android:layout_width="wrap_content" android:layout_height="36dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/map_card_regular_text"
                    android:background="@drawable/map_card_path_button"
                    android:backgroundTint="@color/colorPrimaryLight"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_baseline_directions_18px"
                    android:text="@string/card_path_button_text"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>

            <Button android:id="@+id/bookmark_button"
                    android:layout_width="wrap_content" android:layout_height="36dp"
                    app:layout_constraintStart_toEndOf="@+id/path_button"
                    app:layout_constraintTop_toBottomOf="@id/map_card_regular_text"
                    android:background="@drawable/map_card_bookmark_button"
                    android:layout_marginTop="4dp" android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/ic_star_border_black_18dp"
                    android:text="@string/map_card_bookmark_text"
                    android:drawablePadding="8dp" android:gravity="center_vertical"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/map_refresh_fab"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="72dp" android:layout_marginEnd="16dp"
            app:elevation="6dp"
            android:src="@drawable/ic_refresh_black_16dp"
            app:backgroundTint="@color/colorPrimaryLight"/>

</android.support.design.widget.CoordinatorLayout>