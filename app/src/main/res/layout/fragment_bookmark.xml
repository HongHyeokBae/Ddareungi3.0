<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 tools:context=".BookmarkFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingStart="8dp" android:paddingEnd="8dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/weather_image"
                    android:layout_marginStart="16dp"
                    android:paddingTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/dust_text"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqahansansregular"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/no_bookmark_image"
                android:src="@drawable/ic_no_bookmark"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="138dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/no_bookmark_text"
                android:text="즐겨찾는 정류소를 추가해주세요"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:textSize="18sp" android:textColor="@color/grey"
                android:fontFamily=""
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/network_refresh_button"
                android:text="새로고침"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/spoqahansansregular" android:textSize="12sp"
                android:visibility="gone"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView android:id="@+id/bookmark"
                                                android:layout_marginTop="36dp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton android:id="@+id/bookmark_refresh_fab"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="bottom|end"
                                                        android:layout_marginBottom="64dp"
                                                        android:layout_marginEnd="16dp"
                                                        app:elevation="6dp"
                                                        android:src="@drawable/ic_refresh_black_16dp"
                                                        app:backgroundTint="@color/colorPrimaryLight"
                                                        app:borderWidth="0dp"/>

</android.support.design.widget.CoordinatorLayout>