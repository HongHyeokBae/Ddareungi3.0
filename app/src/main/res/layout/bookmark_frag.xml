<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">
        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/neighborhood_text"
                android:layout_marginStart="8dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/spoqahansansregular"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:id="@+id/weatherLL"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">
            <ImageView
                    android:id="@+id/weather_image"
                    android:layout_marginStart="8dp"
                    android:paddingTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/dust_text"
                    android:layout_marginStart="25dp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqahansansregular"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/bookmark"
                android:layout_marginTop="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/weatherLL"/>

        <LinearLayout
                android:id="@+id/no_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/no_bookmark_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_no_bookmark"
                    android:layout_gravity="center_horizontal"/>

            <TextView
                    android:id="@+id/no_bookmark_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="즐겨찾는 정류소를 추가해주세요"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/grey"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/no_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/no_wifi_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_error_icon"/>

            <TextView
                    android:id="@+id/no_wifi_text"
                    android:text="GPS설정과 네트워크 연결을 확인해주세요"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp" android:textColor="@color/grey"
                    android:fontFamily=""
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/network_refresh_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="새로고침"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/spoqahansansregular"
                    android:textSize="14sp"/>
        </LinearLayout>

        <ProgressBar
                android:id="@+id/progress_circular"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/bookmark_refresh_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            app:elevation="6dp"
            android:src="@drawable/ic_refresh_black_16dp"
            app:backgroundTint="@color/colorPrimaryLight"
            app:borderWidth="0dp"/>

</android.support.design.widget.CoordinatorLayout>