<?xml version="1.0"?>

<FrameLayout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_marginBottom="7dp" android:layout_marginStart="4dp"
             android:layout_marginEnd="4dp"
             android:layout_height="290dp"
             android:layout_width="168dp">

    <ImageView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/crsmenucardimg"
               android:scaleType="fitXY"/>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingLeft="10dp"
                  android:layout_gravity="center_vertical" android:orientation="vertical">

        <TextView android:layout_height="wrap_content" android:layout_width="match_parent"
                  android:id="@+id/crsmenucardsubtitle" android:textSize="10sp" android:textColor="#fff"/>

        <TextView android:layout_height="50dp" android:layout_width="match_parent" android:id="@+id/crsmenucardtitle"
                  android:textSize="21sp" android:textColor="#fff" android:textStyle="bold"/>

    </LinearLayout>

</FrameLayout>
